[MASTER]
# Ignore Python code in VCS metadata
ignore=CVS,.bzr,.svn,.git

[MESSAGES CONTROL]
# Disable the message(s) with the given id(s).
# W0142: Used * or ** magic
# W0511: Warning notes in code comments
# C0111: Missing docstring
# C0103: Invalid variable name
# C0303: Trailing whitespace
disable=W0142,W0511,C0111,C0103,C0303

[REPORTS]
output-format=colorized

[FORMAT]
max-line-length=119
